            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input#summary.input100(type='text' name='Summary' placeholder='Tell How You Have Been')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Password is required')
          input#password.input100(type='password' name='password' placeholder='Set Password')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-lock(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Password is required')
          input#passwordConfirm.input100(type='password' name='passwordConfirm' placeholder='Confirm Password')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-lock(aria-hidden='true')
