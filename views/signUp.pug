.limiter
  .container-login100
    .wrap-login100
      .login100-pic.js-tilt(data-tilt='')
        img(src='/images/img-01.png' alt='IMG')
      form.login100-form.validate-form
        span.login100-form-title
          | Please provide Us with your Details
        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input#names.input100(type='text' name='names' placeholder='Please Enter Your Names')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input#email.input100(type='text' name='email' placeholder='Please Enter Your Email')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input#gender.input100(type='text' name='gender' placeholder='Eg. Male or Female')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input#age.input100(type='text' name='Age' placeholder='Eg. 24')
          span.focus-input100
          span.symbol-input100
            i.fa.fa-envelope(aria-hidden='true')
        .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
          input#address.input100(type='text' name='Address' placeholder='Eg. Kampala')
          span.focus-input100
